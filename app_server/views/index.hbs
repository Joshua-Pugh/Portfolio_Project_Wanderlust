<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Wanderlust Travel Agency</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Italianno&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div id="background">
        <div id="page">
            {{> header }}
            <main>
                <section id="home">
                    <div class="slideshow-container">
                        <h2>Spend the summer with us and explore the extraordinary!</h2>
                        {{#each slides}}
                        <div class="mySlides fade">
                            <img src="{{this.image}}" style="width:100%">
                            <a href="/travel" class="button-primary">Book Now</a>
                        </div>
                        {{/each}}
                    </div>
                    <br>
                    <div style="text-align:center">
                        {{#each slides}}
                        <span class="dot" onclick="currentSlide({{ @index }})"></span> 
                        {{/each}}
                    </div>
                </section>
                <section id="top-destinations">
                    <h2>Explore Top Places</h2>
                    <div class="destinations-container">
                        {{#each topDestinations}}
                        <div class="destination">
                            <a href="/booking?destination={{this.name}}"><img src="{{this.image}}" alt="{{this.alt}}" height="400" width="400"><span class="destination-tag">{{this.name}}</span></a>
                        </div>
                        {{/each}}
                    </div>
                </section>
                <section class="content-container">
                    <div class="box blog-posts">
                        <h3>Latest Blogs</h3>
                        <ul>
                            {{#each blogs}}
                            <li>
                                <h4><a href="/news">{{this.title}}</a></h4>
                                <span>{{this.date}}</span>
                                <p>{{this.description}}</p>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="box testimonials">
                        <h3>Testimonials</h3>
                        {{#each testimonials}}
                        <div class="testimonial-slide">
                            <p>
                                "{{this.text}}" <span>{{this.name}}</span>
                            </p>
                            <div class="star-rating" data-rating="{{this.rating}}">
                                <!-- Stars generated by JavaScript -->
                            </div>
                        </div>
                        {{/each}}
                        <div>
                            <a href="/rateUs"><button class="button-rate">Rate Us</button></a>
                        </div>
                    </div>
                </section>
            </main>
            {{> footer }}
        </div>
    </div>
    <script src="js/scripts.js"></script>
</body>
</htm>